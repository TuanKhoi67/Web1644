<a class="btn btn-info" href="/toys/add">Add new toy</a>
<br><br>
<table class="table table-bordered">
    <tr>
        <th>Toy name</th>
        <th>toy type</th>
        <th>toy brand</th>
        <th>toy image</th>
   </tr>
   {{#each toys }}
   <tr>
        <td>{{ name }}</td>
        <td>{{ type }}</td>
        <td>{{ brand.name }}</td>
        <td>
            <img src="{{ image }}" alt="" width="100" height="120">
        </td>
   </tr>
   {{/each}}
</table>