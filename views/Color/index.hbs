<a class="btn btn-info" href="/color/add">Add new color</a>
<a class="btn btn-danger" href="/color/deleteall">Delete all</a>
<br><br>
<table class="table table-secondary">
   <tr>
      <th>color name</th>
      <th></th>
      <th colspan="3">Menu</th>
   </tr>
   {{#each colors }}
   <tr>
      <td>
         <a href="/color/detail/{{ _id }}">
            {{ name }}
         </a>
      </td>
      <td>{{ country }}</td>
      <td>
         <a class="btn btn-warning" href="/color/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/color/delete/{{ _id }}"
         onclick="return confirm('Are you sure to delete this color ?');"
         >Delete</a>
      </td>
   </tr>
   {{/each}}
</table>